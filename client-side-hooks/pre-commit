#!/bin/bash

# This script should be copied to .git/hooks/ in your local repo

# Staging Server
if [ `git rev-parse --abbrev-ref HEAD` == "staging" ]; then

    # Dump the database
    mysqldump -u root -proot wv_giftsnews > ~/Sites/6Deg/WorldVision/worldvisiongiftnews/deploy/wv_giftsnews.sql

fi

